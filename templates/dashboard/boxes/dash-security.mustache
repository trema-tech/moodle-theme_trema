{{!
    @template theme_trema/dashboard/boxes/dash-security

    Security dashboard box.

    Context variables:
    * haswarning - Whether there are security warnings
    * warningcount - Number of security warnings
    * wwwroot - Site URL
}}
{{#haswarning}}
<div class="card-body">
    <i class="fa fa-3x fa-ambulance float-left pr-3"></i>
    <h3 class="h5 pt-1"><a href="{{wwwroot}}/report/security/index.php">{{#str}}security, admin{{/str}}</a></h3>
    <p>{{#str}}alert, theme_trema{{/str}} <span class="badge-danger pl-1 pr-1">{{warningcount}}</span></p>
</div>
{{/haswarning}}
