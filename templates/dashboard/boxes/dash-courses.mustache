{{!
    @template theme_trema/dashboard/boxes/dash-courses

    Courses dashboard box.

    Context variables:
    * activecourses - Active courses
    * totalcourses - Total number of courses
}}
<div class="card-body">
    <i class="fa fa-3x fa-graduation-cap float-left pr-3"></i>
    <h3 class="h5 pt-1">{{#str}}courses{{/str}}</h3>
    <p>{{#str}}active{{/str}} {{activecourses}} | {{#str}}total{{/str}} {{totalcourses}}</p>
</div>
